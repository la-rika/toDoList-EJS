<!-- <%= %> : usare le variabili del file js -->
<!-- <% %> : permette di scirvere js nel file html -->

<%- include("header") -%>
    <div class="box" id="heading">
        <h1>
            <%= title %>
        </h1>
    </div>

    <div class="box">
        <% newListItems.forEach(item=> {%>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%=item._id%>" onchange="this.form.submit()">
                    <p>
                        <%= item.name %>
                    </p>
                </div>
                <input type="hidden" name="list" value="<%= title %>">
            </form>
            <% }) %>

                <form action="/" method="post">
                    <input type="text" placeholder="write something" name="newItem" autocomplete="off">
                    <button type="submit" name="list" value="<%= title %>">+</button>
                </form>
    </div>
    <%- include("footer") -%>

